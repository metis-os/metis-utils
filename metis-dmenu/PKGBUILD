# Maintainer: iyamnabeen <iym.nabeen@gmail.com>

pkgname=metis-dmenu
pkgver=1.3
pkgrel=5
pkgdesc="Dmenu launcher for  @metis-os"
url="https://github.com/metis-os/core-utils"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
groups=(core-utils)
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../source/. ${srcdir}
}

package() {
      cd "${_pkgname}"
      make PREFIX=/usr DESTDIR="${pkgdir}" install
  }

